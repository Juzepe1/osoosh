<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_event_configuration_with_rss" model="ir.ui.view">
            <field name="name">Configure Events RSS Feed</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='integration']" position="inside">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <group string="RSS Feed Settings">
                                <field name="rss_title"/>
                                <field name="rss_email"/>
                                <field name="rss_description"/></group>
                            </div>
                        </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
